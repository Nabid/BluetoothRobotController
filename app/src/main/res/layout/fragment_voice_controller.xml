<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<!-- recognized text will be shown here -->
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/tv_recognized_text"
		android:layout_alignParentTop="true"
		android:textSize="@dimen/abc_text_size_large_material"
		android:padding="@dimen/custom_margin_padding_medium"
		android:textIsSelectable="true"/>

	<!-- tap button -->
	<ImageButton
		android:layout_width="200dp"
		android:layout_height="200dp"
		android:id="@+id/btn_voice_command"
		android:layout_alignParentBottom="true"
		android:layout_centerInParent="true"
		android:background="@drawable/ic_action_mic"
		android:backgroundTint="#0091ea"/>

	<!-- tap text -->
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/tv_tap"
		android:layout_above="@id/btn_voice_command"
		android:text="@string/tap_voice_button"
		android:gravity="center"
		android:textAllCaps="true"
		android:textIsSelectable="false"/>

</RelativeLayout>